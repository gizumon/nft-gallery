{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "jsx": "react-jsx",
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "rules": {
    "node/exports-style": ["warn", "module.exports"],
  },
}
